services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    image: verbo-app
    restart: unless-stopped
    ports:
      - "8000:80"
    environment:
      APP_ENV: production
      APP_DEBUG: "false"
      APP_URL: http://localhost:8000
      DB_CONNECTION: mysql
      DB_HOST: db
      DB_PORT: 3306
      DB_DATABASE: verbo
      DB_USERNAME: verbo_user
      DB_PASSWORD: verbo_password
      # Configuração S3/MinIO
      AWS_ACCESS_KEY_ID: minioadmin
      AWS_SECRET_ACCESS_KEY: minioadmin
      AWS_DEFAULT_REGION: us-east-1
      AWS_BUCKET: oitivas
      AWS_ENDPOINT: http://minio:9000
      AWS_USE_PATH_STYLE_ENDPOINT: "true"
    # volumes:
      # Opcional: Montar storage para persistência local se não usar S3 real
      # - ./storage/app:/var/www/html/storage/app
    depends_on:
      - db

  db:
    image: mysql:8.0
    restart: always
    environment:
      MYSQL_DATABASE: verbo
      MYSQL_USER: verbo_user
      MYSQL_PASSWORD: verbo_password
      MYSQL_ROOT_PASSWORD: root
    volumes:
      - db_data:/var/lib/mysql

volumes:
  db_data:
